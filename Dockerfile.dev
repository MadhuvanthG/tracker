FROM golang:1.12

ARG HEALTH_PROBE_VERSION=0.3.1

RUN go get golang.org/x/lint/golint

ENV GO111MODULE on

WORKDIR /go/src/tracker

COPY go.mod .
COPY go.sum .
COPY Makefile .

RUN make deps

COPY . .
RUN make test && make install

RUN useradd -ms /bin/sh tracker
WORKDIR /home/tracker
USER tracker

ENTRYPOINT [ "tracker" ]
